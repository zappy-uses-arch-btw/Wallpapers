configuration {
    modi: "drun";
    show-icons: true;
    icon-theme: "Papirus-Dark";
    display-drun: "";
    drun-display-format: "{name}";
    disable-history: false;
    sidebar-mode: false;
    font: "JetBrainsMono Nerd Font 11";
}

@import "~/.config/rofi/colors.rasi"

* {
    background-color: transparent;
    text-color: @foreground;
}

window {
    transparency: "real";
    background-color: @background-trans;
    border: 2px;
    border-color: @accent;
    border-radius: 12px;
    width: 600px;
    location: center;
    anchor: center;
}

mainbox {
    children: [ listview, inputbar ];
    spacing: 12px;
    padding: 12px;
}

inputbar {
    children: [ prompt, entry ];
    background-color: @background-alt;
    border-radius: 8px;
    padding: 12px 16px;
    spacing: 8px;
}

prompt {
    enabled: true;
    background-color: transparent;
    text-color: @accent;
}

entry {
    placeholder: "Search apps...";
    placeholder-color: @foreground-dim;
    background-color: transparent;
    cursor: text;
}

listview {
    lines: 4;
    columns: 1;
    cycle: true;
    scrollbar: false;
    border: 0px;
    spacing: 8px;
}

element {
    orientation: horizontal;
    border-radius: 8px;
    padding: 12px 16px;
    spacing: 12px;
    background-color: transparent;
}

element normal.normal {
    background-color: transparent;
    text-color: @foreground;
}

element selected.normal {
    background-color: @accent;
    text-color: @background;
}

element-icon {
    size: 32px;
    background-color: transparent;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    vertical-align: 0.5;
}
